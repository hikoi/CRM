                                            </when>
                                        </choose>
                                    </trim>
                                </foreach>
                            </when>
                        </choose>
                    </trim>
                </foreach>
            </if>
        </where>
    </sql>

    <resultMap id="message" type="com.crm.core.im.entity.IMCustomMessage">
        <id     column="id"                property="id"               javaType="java.lang.String"/>
        <result column="wxno"              property="wxno"             javaType="java.lang.String"/>
        <result column="from_account"      property="fromAccount"      javaType="java.lang.String"/>
        <result column="to_account"        property="toAccount"        javaType="java.lang.String"/>
        <result column="content"           property="content"          javaType="java.lang.String"/>
        <result column="conversation_time" property="conversationTime" javaType="java.util.Date"/>
        <result column="type"              property="type"             typeHandler="WechatMessageType"/>
        <result column="create_time"       property="createTime"       javaType="java.util.Date"/>
        <result column="update_time"       property="updateTime"       javaType="java.util.Date"/>
    </resultMap>

    <insert id="save">
        INSERT
          INTO im_custom_message (
               id,
               wxno,
               from_account,
               to_account,
               content,
               conversation_time,
               type,
               create_time
          ) VALUE (
               #{id,               jdbcType=VARCHAR},
               #{wxno,             jdbcType=VARCHAR},
               #{fromAccount,      jdbcType=VARCHAR},
               #{toAccount,        jdbcType=VARCHAR},
               #{content,          jdbcType=VARCHAR},
               #{conversationTime, jdbcType=TIMESTAMP},
               #{type,             typeHandler=WechatMessageType},
               #{createTime,       jdbcType=TIMESTAMP}
          )
    </insert>

    <update id="update">
        UPDATE im_custom_message
         <set>
             <if test="content != null">
                 content = #{content, jdbcType=VARCHAR},
             </if>
             <if test="conversationTime != null">
                 conversation_time = #{conversationTime, jdbcType=TIMESTAMP},
             </if>
             <if test="type != null">
                 type = #{type, typeHandler=WechatMessageType},
             </if>
             <if test="updateTime != null">
                 update_time = #{updateTime, jdbcType=TIMESTAMP},
             </if>
         </set>
          WHERE id = #{id}
    </update>

    <select id="get" resultMap="message">
        SELECT *
          FROM im_custom_message
        <if test="params != null">
            <include refid="WHERE_SQL"/>
        </if>
    </select>

    <select id="find" resultMap="message">
        SELECT *
          FROM im_custom_message
        <if test="params != null">
            <include refid="WHERE_SQL"/>

            <if test="params.sorts != null and params.sorts.size > 0">
                ORDER BY
                <foreach collection="params.sorts" item="sort" separator=",">
                    ${sort.property} ${sort.operator}
                </foreach>
            </if>

            <if test="params.limit != null">
                ${params.limit.operator} ${params.limit.value}, ${params.limit.secondValue}
            </if>
        </if>
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*)
          FROM im_custom_message
        <if test="params != null">
            <include refid="WHERE_SQL"/>
        </if>
    </select>
</mapper>